<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="72dp" >

        <ImageView
            android:id="@+id/item_sitio_imagen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/parques"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:background= "@drawable/button_circle_naranja"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/item_sitio_nombre"
            android:layout_marginTop="16dp"
            android:layout_toRightOf= "@+id/item_sitio_imagen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartago"
            android:id="@+id/item_sitio_ciudad"
            android:layout_below="@+id/item_sitio_nombre"
            android:layout_alignLeft="@+id/item_sitio_nombre"
            android:layout_alignStart="@+id/item_sitio_nombre" />

        <ImageView
            android:id="@+id/imagen_verificado"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/button_circle_primary"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDivider"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>




