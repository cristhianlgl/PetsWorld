<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/button_naranja"
    android:id="@+id/menu_contenedor_fondo"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/imagen_categoria"
        android:gravity="center"
        android:src="@drawable/parques"
        android:paddingTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nombre_categroria"
        android:text="Categoria"
        android:textSize="20sp"
        android:textColor="@color/colorTextColorPrimary"
        android:gravity="center" />

</LinearLayout>